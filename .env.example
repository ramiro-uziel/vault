PORT=8080

DATA_DIR=./data

# JWT secret for signing access tokens (REQUIRED)
JWT_SECRET=

# Signed URL secret for media access (REQUIRED)
SIGNED_URL_SECRET=

# Pepper for hashing refresh/invite/reset tokens
TOKEN_PEPPER=

# Auth settings
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h
SIGNED_URL_TTL=5m

# Cookie settings
COOKIE_SECURE=true
COOKIE_SAMESITE=Lax
# COOKIE_DOMAIN=example.com

# Comma-separated list of allowed CORS origins
# CORS_ALLOWED_ORIGINS=https://vault.example.com
